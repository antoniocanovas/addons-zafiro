<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_pet_form" model="ir.ui.view">
        <field name="name">product product shelter PET</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//form/header" position="inside">
                <field name="state_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}" attrs="{'invisible': [('pet_ok', '=', False)]}"/>
            </xpath>
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="pet_ok"/>
                    <label for="pet_ok"/>
                </span>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="before">
                <page name="product_pet" string="Pet" attrs="{'invisible':[('pet_ok','=',False)]}">
                    <h3>Details:</h3>
                    <group>
                    </group>
                </page>
                <page name="pet_tasks" string="Tasks" attrs="{'invisible':[('pet_ok','=',False)]}">
                    <field name="task_ids"/>
                </page>
            </xpath>

        </field>
    </record>


</odoo>