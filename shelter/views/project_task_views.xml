<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="project_task_pet_form_inh" model="ir.ui.view">
        <field name="name">Project Task Pet Form Inherited</field>
        <field name="model">project.task</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <field name="user_ids" position="after">
                <field name="product_id" domain="[('pet_ok','=',True)]"/>
            </field>
            <field name="description" position="before">
                <group>
                    <field name="home_id"
                           attrs="{'invisible':['|',('product_id','=',False),('type_char','not ilike','home')]}"/>
                    <field name="veterinary_id"
                           attrs="{'invisible':['|',('product_id','=',False),('type_char','not ilike','veterinary')]}"/>
                    <field name="volunteer_id"
                           attrs="{'invisible':['|',('product_id','=',False),('type_char','not ilike','volunteer')]}"/>
                    <field name="type_char" invisible="1"/>
                </group>
            </field>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>

</odoo>
