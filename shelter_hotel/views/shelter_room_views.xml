<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="shelter_room_form" model="ir.ui.view">
        <field name="name">Shelter Room Form</field>
        <field name="model">shelter.room</field>
        <field name="type">form</field>
        <field name="inherit_id" eval="False"/>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <form string="Shelter Room">
                <sheet string="Sheet Room">
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group>
                        <field name="home_id"/>
                        <field name="location_id"/>
                        <field name="type"/>
                        <field name="city"/>
                        <field name="state_id"/>
                        <field name="country_id"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="shelter_note"/>
                        <field name="active"/>
                        <field name="date_begin"/>
                        <field name="date_end"/>
                        <field name="available"/>
                        <field name="reservation_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shelter_room_tree" model="ir.ui.view">
        <field name="name">Shelter Room Tree</field>
        <field name="model">shelter.room</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="shelter_room">
                <field name="name" invisible="1"/>
                <field name="home_id"/>
                <field name="location_id"/>
                <field name="type"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="shelter_note"/>
                <field name="active"/>
                <field name="date_begin"/>
                <field name="date_end"/>
                <field name="available"/>
                <field name="reservation_ids"/>
            </tree>
        </field>
    </record>

</odoo>
