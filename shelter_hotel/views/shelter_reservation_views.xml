<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- Shelter Reservation BUTTON on SHELTER.ROOM FORM View -->
    <record id="action_view_room_reservations" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="context">{'search_default_room_id': active_id,'default_room_id': active_id}</field>
        <field name="domain">[('room_id', '=',active_id)]</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="help"><![CDATA[<p> Room Reservations </p>]]></field>
        <field name="limit">80</field>
        <field name="name">Reservations</field>
        <field name="res_model">shelter.room</field>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="shelter_reservation_form" model="ir.ui.view">
        <field name="name">Shelter Reservation Form</field>
        <field name="model">shelter.reservation</field>
        <field name="type">form</field>
        <field name="inherit_id" eval="False"/>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <form string="Shelter Reservation">
                <sheet string="Sheet Reservation">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-book" type="action" name="%(action_view_room_reservations)d">
                            <field name="reservation_count" string="Reservations" widget="statinfo"/>
                        </button>
                    </div>
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group>
                        <group>
                            <field name="pet_id"/>
                            <field name="room_id" domain="[('available','=',True)]"/>
                            <field name="date_begin"/>
                            <field name="date_end"/>
                            <field name="done" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="home_id"/>
                            <field name="city"/>
                            <field name="location_id"/>
                            <field name="type"/>
                        </group>
                    </group>
                    <group string="Comments">
                        <field name="comment" nolabel="1" colspan="2"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="shelter_reservation_tree" model="ir.ui.view">
        <field name="name">Shelter Reservation Form</field>
        <field name="model">shelter.reservation</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="shelter_reservation">
                <field name="name" invisible="1"/>
                <field name="room_id"/>
                <field name="type"/>
                <field name="pet_id"/>
                <field name="home_id" optional="hide"/>
                <field name="location_id" optional="hide"/>
                <field name="date_begin"/>
                <field name="date_end"/>
                <field name="done" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

</odoo>
