<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_pet_form_inh" model="ir.ui.view">
        <field name="name">Product Template Shelter PET</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" attrs="{'invisible': [('pet_ok', '=', False)]}"/>
            </xpath>
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="pet_ok"/>
                    <label for="pet_ok"/>
                </span>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="before">
                <page name="product_pet" string="Pet" attrs="{'invisible':[('pet_ok','=',False)]}">
                    <h3>Details:</h3>
                    <group>
                    </group>
                </page>
                <page name="pet_tasks" string="Tasks" attrs="{'invisible':[('pet_ok','=',False)]}">
                    <field name="task_ids"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_pet_search_inh" model="ir.ui.view">
        <field name="name">product template shelter search inh PET</field>
        <field name="model">product.template</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <filter name="type" position="before">
                <filter string="Stage" name="stage_id" context="{'group_by':'stage_id'}"/>
            </filter>
        </field>
    </record>

    <record id="product_product_pet_search_inh" model="ir.ui.view">
        <field name="name">product product shelter search inh PET</field>
        <field name="model">product.product</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <filter name="type" position="before">
                <filter string="Stage" name="stage_id" context="{'group_by':'stage_id'}"/>
            </filter>
        </field>
    </record>


    <record id="product_pet_kanban_view" model="ir.ui.view">
        <field name="name">Product Pet Kanban</field>
        <field name="model">product.product</field>
        <field name="priority">99</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" sample="1" quick_create="false">

                <field name="id"/>
                <field name="product_variant_count"/>
                <field name="currency_id"/>
                <field name="activity_state"/>
                <field name="list_price"/>
                <field name="color"/>
                <field name="responsible_id"/>
                <field name="veterinary_id"/>
                <field name="volunteer_id"/>
                <field name="image_1920"/>
                <field name="color"/>
                <field name="stage_id" options="{'group_by_tooltip': {'code': 'code'}}"/>
                <field name="active"/>
                <field name="categ_id"/>
                <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <strong class="o_kanban_record_title">
                                            <field name="categ_id"/>
                                        </strong>
                                        <br/>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <t t-if="record.default_code.value">[<field name="default_code"/>]</t>
                                <div t-if="record.product_variant_count.value &gt; 1" groups="product.group_product_variant">
                                    <strong>
                                        <t t-esc="record.product_variant_count.value"/> Variants
                                    </strong>
                                </div>
                                <div t-if="record.image_1920">
                                    <field name="image_1920" widget="image"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="oe_kanban_bottom_right">
                                    <span><b>Home:</b><field name="home_id" attrs="{'invisible': [('home_id', '=', False)]}"/><br/> </span>
                                    <span><b>Responsible:</b><field name="responsible_id" attrs="{'invisible': [('responsible_id', '=', False)]}"/><br/> </span>
                                    <span><b>Veterinay:</b><field name="veterinary_id" attrs="{'invisible': [('veterinary_id', '=', False)]}"/><br/> </span>
                                    <span><b>Volunteer:</b><field name="volunteer_id" attrs="{'invisible': [('volunteer_id', '=', False)]}"/><br/> </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>




</odoo>