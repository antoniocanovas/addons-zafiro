<?xml version='1.0' encoding='UTF-8'?>
<odoo>

  <record id="action_shelter_pets" model="ir.actions.act_window">
    <field name="name">Pets</field>
    <field name="res_model">product.product</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="context">{'search_default_stage_id': 1}</field>
    <field name="domain">[('pet_ok','=',True)]</field>
    <field name="view_ids"
           eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('product_pet_kanban_view')}),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('product_pet_tree_view')}),
                          ]"/>
  </record>

  <menuitem
          id="menu_shelter_main"
          name="Shelter"
          action="action_shelter_pets"
          groups="stock.group_stock_user"
          web_icon="shelter_pet,static/icon.png"
          sequence="10"
  />

</odoo>