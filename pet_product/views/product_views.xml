<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_pet_form" model="ir.ui.view">
        <field name="name">product template PET</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="pet_ok"/>
                    <label for="pet_ok"/>
                </div>
            </xpath>

            <xpath expr="//page[@name='general_information']" position="before">
                <page name="product_pet" string="Pet" attrs="{'invisible':[('pet_ok','=',False)]}">
                    <h3>Details:</h3>
                    <group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>


</odoo>