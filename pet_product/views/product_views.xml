<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_chassis_form_view" model="ir.ui.view">
        <field name="name">Product Template Chassis FORM View</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="chassis_pt" attrs="{'invisible':[('attribute_line_ids','!=',[])]}"/>
            </field>
        </field>
    </record>

    <record id="product_product_chassis_form_view" model="ir.ui.view">
        <field name="name">Product Product Chassis FORM View</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="chassis_pp" attrs="{'readonly':[('chassis_pt','!=',False)]}"/>
                <field name="chassis_pt" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="product_product_variant_easy_chassis_form_view" model="ir.ui.view">
        <field name="name">Product Product Easy Chassis FORM View</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="chassis_pp" attrs="{'readonly':[('chassis_pt','!=',False)]}"/>
                <field name="chassis_pt" invisible="1"/>
            </field>
        </field>
    </record>


</odoo>